import React from 'react';
import { Bar } from 'react-chartjs-2';
import { Chart as ChartJS, CategoryScale, LinearScale, BarElement, Title, Tooltip, Legend } from 'chart.js';

ChartJS.register(CategoryScale, LinearScale, BarElement, Title, Tooltip, Legend);

const CustomerInteractionGraph = ({ interaction }) => {
  const data = {
    labels: ['Urgency', 'Importance', 'Customer Satisfaction', 'Customer Strength', 'Satisfaction', 'Friendly'],
    datasets: [
      {
        label: 'Customer Interaction Metrics',
        data: [
          interaction.urgency,
          interaction.importance,
          interaction.customerSatisfaction,
          interaction.customerStrength,
          interaction.satisfaction,
          interaction.friendly
        ],
        backgroundColor: 'rgba(54, 162, 235, 0.5)',
        borderColor: 'rgba(54, 162, 235, 1)',
        borderWidth: 1,
      },
    ],
  };

  return <Bar data={data} />;
};

export default CustomerInteractionGraph;
